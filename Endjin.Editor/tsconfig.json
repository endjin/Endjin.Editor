{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es5",
    "declaration": true,
    "module": "system",
    "strictNullChecks": true,
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "outFile": "../built/local/editor.js",
    "sourceMap": true,
    "lib": [ "dom", "es5", "scripthost", "es2015.collection" ]
  },
  "include": [
    "Scripts/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}