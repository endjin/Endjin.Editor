{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es5",
    "declaration": true,
    "module": "umd",
    "strictNullChecks": true,
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "lib": [ "dom", "es5", "scripthost", "es2015.collection" ]
  },
  "include": [
    "Scripts/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "Scripts/**/*.d.ts",
    "**/*.spec.ts"
  ]
}